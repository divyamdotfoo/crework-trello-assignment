{
  "display": "Node LTS",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "dist"
  },

  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
